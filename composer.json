{
  "name": "technote-fork/igo-php",
  "type": "library",
  "license": "MIT",
  "description": "Morphological analysis engine 'Igo' porting and changed for PHP 5.3 and composer.",
  "homepage": "https://github.com/technote-fork/igo-php",
  "keywords": [
    "php",
    "igo",
    "morphological analysis",
    "chasen"
  ],
  "authors": [
    {
      "name": "Logue",
      "email": "logue@hotmail.co.jp",
      "homepage": "http://logue.be/"
    },
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "homepage": "https://technote.space"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "codedungeon/phpunit-result-printer": "^0.26.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "phpmd/phpmd": "^2.7",
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Igo\\": "src/Igo/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Igo\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/technote-fork/igo-php"
    }
  ],
  "scripts": {
    "setup": "composer install --no-interaction --prefer-dist --no-suggest",
    "test": [
      "@stage-lint",
      "@stage-test"
    ],
    "stage-lint": [
      "@phpcs",
      "@phpmd"
    ],
    "stage-test": [
      "@phpunit"
    ],
    "phpcs": "phpcs --standard=./phpcs.xml",
    "phpmd": "phpmd ./src/,./tests/ text phpmd.xml",
    "phpunit": "phpunit --stop-on-failure --colors=always",
    "phpunit:no": "@phpunit --no-coverage",
    "packages": [
      "rm -rdf vendor",
      "rm -f composer.lock",
      "composer require --dev codedungeon/phpunit-result-printer dealerdirect/phpcodesniffer-composer-installer phpmd/phpmd phpunit/phpunit squizlabs/php_codesniffer"
    ],
    "install:phpunit": [
      "rm -rdf vendor",
      "rm -f composer.lock",
      "phpunit/phpunit"
    ]
  }
}
