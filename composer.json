{
  "name": "technote-fork/igo-php",
  "type": "library",
  "license": "MIT",
  "description": "Morphological analysis engine 'Igo' porting and changed for PHP 5.6 and composer.",
  "homepage": "https://github.com/technote-fork/igo-php",
  "keywords": [
    "php",
    "igo",
    "morphological analysis",
    "chasen"
  ],
  "authors": [
    {
      "name": "Logue",
      "email": "logue@hotmail.co.jp",
      "homepage": "http://logue.be/"
    },
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "homepage": "https://technote.space"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "codedungeon/phpunit-result-printer": "^0.26.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "phpmd/phpmd": "^2.7",
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Igo\\": "src/Igo/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Igo\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "setup": "composer install --no-interaction --prefer-dist --no-suggest",
    "lint": [
      "@phpcs",
      "@phpmd"
    ],
    "test": [
      "@phpunit"
    ],
    "phpcs": "phpcs --standard=./phpcs.xml",
    "phpcs:fix": "phpcbf --standard=./phpcs.xml",
    "phpmd": "phpmd ./src/,./tests/ text phpmd.xml",
    "phpunit": "phpunit --stop-on-failure --colors=always",
    "phpunit:no": "@phpunit --no-coverage",
    "packages": [
      "@config:remove",
      "rm -rdf vendor",
      "rm -f composer.lock",
      "composer require --dev codedungeon/phpunit-result-printer dealerdirect/phpcodesniffer-composer-installer phpmd/phpmd phpunit/phpunit squizlabs/php_codesniffer",
      "@config:set"
    ],
    "install:phpunit": [
      "@config:remove",
      "rm -rdf vendor",
      "rm -f composer.lock",
      "composer require --dev phpunit/phpunit"
    ],
    "config:set": [
      "cat composer.json | jq '.+ {\"config\":{\"platform\":{\"php\":\"5.6\"}}}' > composer.tmp.json",
      "mv composer.tmp.json composer.json"
    ],
    "config:remove": [
      "cat composer.json | jq 'del(.config)' > composer.tmp.json",
      "mv composer.tmp.json composer.json"
    ]
  },
  "config": {
    "platform": {
      "php": "5.6"
    }
  }
}
